[Unit]
Description=CSYE 6225 webapp
After=multi-user.target

[Service]
ExecStart=/home/ec2-user/.nvm/versions/node/v16.19.1/bin/node /home/ec2-user/webapp/dist/index.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225-webapp
User=ec2-user
EnvironmentFile=/home/ec2-user/webapp/.env

[Install]
WantedBy=multi-user.target